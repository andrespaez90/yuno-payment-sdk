<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/spacing_xlarge"
    android:paddingTop="@dimen/spacing_xlarge"
    android:paddingRight="@dimen/spacing_xlarge"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Yuno Example"
        android:textSize="@dimen/font_h1" />

    <EditText
        android:id="@+id/editText_api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xlarge"
        android:hint="Insert your Yuno api key"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/textView_title" />

    <Button
        android:id="@+id/button_change_api_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="Change Api Config"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_api_key" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xmicro"
        android:layout_marginTop="@dimen/spacing_standard"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/button_change_api_key" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/yuno_spacing_xlarge"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"
        tools:context=".ui.MainActivity">

        <TextView
            android:id="@+id/textView_title_enrollment"
            style="@style/TextH2.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enrollment" />

        <Button
            android:id="@+id/button_start_enrollment_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add payment" />

        <TextView
            android:id="@+id/textView_title_payment"
            style="@style/TextH2.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yuno_spacing_standard"
            android:text="Payment" />

        <Button
            android:id="@+id/button_payment_lite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Lite Checkout" />

        <Button
            android:id="@+id/button_payment_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Complete Checkout " />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>