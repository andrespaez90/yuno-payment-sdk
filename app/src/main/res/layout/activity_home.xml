<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/yuno_spacing_xlarge"
    tools:context=".ui.HomeActivity">

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_yuno_morado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/yuno_spacing_large"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_logo">

        <TextView
            android:id="@+id/textView_title_enrollment"
            style="@style/TextH2.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enrollment" />

        <Button
            android:id="@+id/button_add_payment"
            style="@style/Button.Normal.Purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yuno_spacing_standard"
            android:text="Start Enrollment Lite"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView_title_payment"
            style="@style/TextH2.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yuno_spacing_standard"
            android:text="Payment" />

        <Button
            android:id="@+id/button_payment_lite"
            style="@style/Button.Normal.Purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yuno_spacing_standard"
            android:text="Start Payment Lite"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_payment_complete"
            style="@style/Button.Normal.Purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yuno_spacing_standard"
            android:text="Start Payment"
            android:textAllCaps="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_secure_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginVertical="@dimen/yuno_spacing_xlarge"
        android:drawablePadding="@dimen/yuno_spacing_large"
        app:drawableStartCompat="@drawable/ic_secure_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Pagos seguros con YUNO" />

</androidx.constraintlayout.widget.ConstraintLayout>